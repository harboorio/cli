{
    "name": "@harboor/cli",
    "version": "0.1.0",
    "description": "",
    "type": "module",
    "main": "./dist/module/harboor.js",
    "types": "./types.d.ts",
    "bin": {
        "harboor": "./dist/bin/harboor.js"
    },
    "exports": {
        ".": {
            "types": {
                "default": "./types.d.ts"
            },
            "import": "./dist/module/harboor.js",
            "default": "./dist/module/harboor.js"
        }
    },
    "scripts": {
        "lint": "eslint src",
        "format:check": "prettier src --check",
        "format": "prettier $(git diff --cached --name-only --diff-filter=ACMR src | sed 's| |\\\\ |g') --write --ignore-unknown",
        "build": "esbuild src/services/cli/harboor.js --bundle --outdir=dist/bin --format=esm --packages=external --tsconfig=tsconfig.json --platform=node --target=node22",
        "test": "vitest",
        "prepare": "husky",
        "commit": "cz"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/harboorio/cli.git"
    },
    "private": false,
    "publishConfig": {
        "access": "public"
    },
    "license": "MIT",
    "author": {
        "name": "Murat GÃ¶zel",
        "email": "murat@gozel.com.tr",
        "url": "https://muratgozel.com.tr"
    },
    "keywords": [
        "deploy",
        "server-framework",
        "build-tool"
    ],
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "devDependencies": {
        "@eslint/js": "^9.21.0",
        "@types/prompts": "^2.4.9",
        "@types/shelljs": "^0.8.15",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.21.0",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "prettier": "^3.5.2",
        "semantic-release": "^24.2.3",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.25.0",
        "vite": "^6.2.0",
        "vitest": "^3.0.7"
    },
    "dependencies": {
        "@harboor/core": "^1.3.1",
        "ajv": "^8.17.1",
        "commander": "^13.1.0",
        "esbuild": "^0.25.0",
        "glob": "^11.0.1",
        "json-schema-to-ts": "^3.1.1",
        "nanoid": "^5.1.3",
        "ora": "^8.2.0",
        "prompts": "^2.4.2",
        "shelljs": "^0.8.5"
    }
}
